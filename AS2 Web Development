    <section id="success-view" class="view">
        <div class="glass-card">
            <div class="success-icon">‚úì</div>
            <h1 style="color: var(--accent)">ORDER COMPLETE</h1>
            <p id="order-confirm-text"></p>
            <button class="btn-action" onclick="resetRegister()">Next Customer</button>
        </div>
    </section>

    <script>
        let total = 0;
        let selectedNames = [];

        // THE PASSWORD LOGIC
        function checkLogin() {
            const userInput = document.getElementById('passInput').value;
            const errorMsg = document.getElementById('error-msg');
            
            // Password is: bean123
            if (userInput === "bean123") {
                errorMsg.style.display = 'none';
                document.getElementById('main-nav').style.display = 'flex';
                showView('home-view');
                fetchSpecial();
            } else {
                errorMsg.style.display = 'block';
                document.getElementById('passInput').value = "";
            }
        }

        function showView(id) {
            document.querySelectorAll('.view').forEach(v => v.classList.remove('active'));
            document.getElementById(id).classList.add('active');
        }

        async function fetchSpecial() {
            try {
                const res = await fetch('/api/special');
                const data = await res.json();
                document.getElementById('ad-banner').innerText = `‚òÖ Today's Pick: ${data.drink} ‚òÖ`;
            } catch (e) {
                document.getElementById('ad-banner').innerText = "‚òÖ Ready to Brew ‚òÖ";
            }
        }

        function toggleItem(el, name, price) {
            el.classList.toggle('selected');
            if (el.classList.contains('selected')) {
                total += price;
                selectedNames.push(name);
            } else {
                total -= price;
                selectedNames = selectedNames.filter(n => n !== name);
            }
            document.getElementById('total-display').innerText = `Total: $${Math.abs(total).toFixed(2)}`;
        }

        function completeOrder() {
            if (total === 0) return alert("Please select a drink first!");
            document.getElementById('order-confirm-text').innerText = `Processed: ${selectedNames.join(', ')}`;
            showView('success-view');
        }

        function resetRegister() {
            total = 0;
            selectedNames = [];
            document.getElementById('total-display').innerText = `Total: $0.00`;
            document.querySelectorAll('.menu-item').forEach(i => i.classList.remove('selected'));
            showView('menu-view');
        }

        function logout() {
            location.reload(); // Simplest way to lock the app again
        }

        // Allow pressing "Enter" key to login
        document.getElementById('passInput').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') checkLogin();
        });
    </script>
